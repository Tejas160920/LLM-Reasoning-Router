# Application Settings
APP_NAME="LLM Reasoning Router"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/llm_router
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Model Configuration
FAST_MODEL=gemini-2.0-flash
COMPLEX_MODEL=gemini-2.5-pro

# Routing Thresholds (0-100)
COMPLEXITY_THRESHOLD_LOW=30
COMPLEXITY_THRESHOLD_HIGH=70

# Quality Checking
QUALITY_THRESHOLD=60
MAX_ESCALATION_DEPTH=2

# Timeouts (seconds)
LLM_TIMEOUT=60.0

# Cost Tracking (per 1M tokens, in USD)
COST_FLASH_INPUT=0.075
COST_FLASH_OUTPUT=0.30
COST_PRO_INPUT=1.25
COST_PRO_OUTPUT=5.00
